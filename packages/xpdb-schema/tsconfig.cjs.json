{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "./dist-esm",
    "rootDir": "../../src/xp-schema",
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true
  },
  "include": [
    "../../src/xp-schema/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "examples",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}

